<?xml version="1.0"?>

<launch>

  <arg name="map_file" default="$(find DRL_nav)/maps/final.yaml"/>

  <!-- Run the map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!-- <param name="/use_sim_time" value="false"/> -->

  <!-- Run rviz -->
  <node name="rviz" pkg="rviz" type="rviz" args="" />

  <!-- Get the robot model-->
  <!-- <param name="robot_description" textfile="$(find jetbot_diff_drive)/urdf/_jetbot.urdf"/> -->

  <!-- robot_state_publisher and joint_state_publisher-->
  <param name="robot_description" textfile="$(find jetbot_diff_drive)/urdf/_jetbot.urdf"/>
  <node name="joint_state_publisher" pkg ="joint_state_publisher" type="joint_state_publisher"/>
  <node name="robot_state_publisher" pkg ="robot_state_publisher" type="robot_state_publisher"/>

  <!-- Publish a static transformation between /base_link and /laser -->
  <!-- <node pkg="tf" type="static_transform_publisher" name="base_to_laser_broadcaster" args="0 0 0 0 0 0 base_link laser 100"/> -->
  <!-- <node pkg="tf" type="static_transform_publisher" name="map_to_laser_broadcaster" args="0 0 0 0 0 0 map rplidar_base_scan 100"/> -->
  <node pkg="tf" type="static_transform_publisher" name="base_to_laser_broadcaster" args="0 0 0 0 0 0 base_link laser 100"/>
</launch>
